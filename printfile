#! /bin/bash

arxiv=()
files=()
for file; do
    if [[ $file = http://arxiv.org/pdf/*.pdf ]]; then
        arxiv+=("$file")
    else
        files+=("$file")
    fi
done

LPR="lpr -o sides=two-sided-long-edge"
GET="wget --user-agent=Lynx -q --output-document=-"
SSH="ssh $(head -n 1 printer)"

if [ ${#arxiv[@]} -gt 0 ]; then
    for file in "${arxiv[@]}"; do
        $GET "$file" | $SSH $LPR
    done 
fi

if [ ${#files[@]} -gt 0 ]; then
    for file in "${files[@]}"; do
        $SSH $LPR < "$file" 
    done
fi
